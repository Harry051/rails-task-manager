<h1><%= @task.title %></h1>
<br>
<h2><%= @task.details %></h2>
<p><%= @task.completed %></p>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
